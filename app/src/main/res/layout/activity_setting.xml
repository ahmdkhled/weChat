<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahmdkhled.chatto.activities.SettingActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/friendsLabel"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendsCardView"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/friendsLabel"
        app:cardElevation="5dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/findFriends"
                android:text="Find friends"
                android:drawableLeft="@drawable/ic_group_add_black_24dp"
                android:drawableStart="@drawable/ic_group_add_black_24dp"
                android:drawablePadding="10dp"
                android:textColor="#424242"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:textAllCaps="false"
                android:layout_margin="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0DEDE"

                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/friends"
                android:text="Friends"
                android:textColor="#424242"
                android:drawableStart="@drawable/ic_person_pin_black_24dp"
                android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                android:drawablePadding="10dp"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loging"
        android:id="@+id/logingLabel"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friendsCardView"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logingCardView"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/logingLabel"
        app:cardElevation="5dp"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/logOut"
            android:text="LogOut"
            android:background="#fff"
            android:textColor="#424242"
            android:drawableStart="@drawable/ic_rowing_black_24dp"
            android:drawableLeft="@drawable/ic_rowing_black_24dp"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>
